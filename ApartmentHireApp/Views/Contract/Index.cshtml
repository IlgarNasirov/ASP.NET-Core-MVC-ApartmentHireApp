@model IQueryable<ApartmentHireApp.DTOs.AllContractsDTO>
@{
    ViewData["title"] = "All contracts";
}
<h1>All contracts</h1>
<hr />
<span class="text-success" id="message">@TempData["success"]</span>
@{
    @if (Model.Count() > 0)
    {
        @foreach (var item in Model)
        {
            <div class="card mt-1">
                <div class="content mb-1">
                    <div class="row">
                        @{
                            var values = item.NoName.Split("-");
                        }
                        <div class="col-sm-6">
                            <h3 class="ml-1">Block name: @values[0]</h3>
                        </div>
                        <div class="col-sm-6">
                            <h3 class="ml-1">No: @values[1]</h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="ml-1">Start date: @item.StartDate</h3>
                        </div>
                        <div class="col-sm-6">
                            <h3 class="ml-1">End date: @item.EndDate</h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="ml-1">First name: @item.FirstName</h3>
                        </div>
                        <div class="col-sm-6">
                            <h3 class="ml-1">Last name: @item.LastName</h3>
                        </div>
                    </div>
                    <h3 class="ml-1">Cost: @item.Cost</h3>
                    <a asp-controller="Contract" asp-action="UpdateContract" asp-route-id="@item.Id" class="btn btn-warning ml-1">Edit</a>
                    <form asp-controller="Contract" asp-action="DeleteContract" method="post" style="display: inline;">
                        <input name="id" type="hidden" value="@item.Id" />
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        }
    }
    else
    {
        <h3>Nothing found!</h3>
    }
}