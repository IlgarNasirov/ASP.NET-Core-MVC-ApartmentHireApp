@model ApartmentHireApp.DTOs.AddApartmentDTO
@{
    ViewData["title"] = ViewData["apartmentTitle"];
}
<div class="card">
    <div class="title">@ViewData["apartmentTitle"]</div>
    <div class="content">
        <div class="container-fluid">
            <form method="post">
                <div class="form-group">
                <label asp-for="BlockName">Block name</label>
                <br />
                    <select asp-for="BlockName" class="form-select">
                        @foreach(var item in Model.Blocks)
                        {
                           <option value="@item">@item</option>   
                        }
                    </select>
                    <br />
                    <span asp-validation-for="BlockName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="No"></label>
                    <input asp-for="No" class="form-control" type="text" />
                    <span asp-validation-for="No" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumberOfRooms">Number of rooms</label>
                    <input asp-for="NumberOfRooms" class="form-control" type="number" />
                    <span asp-validation-for="NumberOfRooms" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Size"></label>
                    <input asp-for="Size" class="form-control" type="text" />
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cost"></label>
                    <input asp-for="Cost" class="form-control" type="text" />
                    <span asp-validation-for="Cost" class="text-danger"></span>
                </div>
                <div class="reset-button">
                    <button class="btn btn-success">@ViewData["apartmentTitle"]</button>
                </div>
                <br />
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}