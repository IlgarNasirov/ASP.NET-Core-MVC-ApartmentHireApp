@model IQueryable<ApartmentHireApp.DTOs.AllBlocksDTO>
@{
    ViewData["title"] = "All blocks";
}
<h1>All blocks</h1>
<hr />
<span class="text-success" id="message">@TempData["success"]</span>
@{
    @if (Model.Count() > 0){
        @foreach (var item in Model){
            <div class="card mt-1">
                <div class="content mb-1">
                    <h3 class="ml-1">@item.Name</h3>
                    <a asp-controller="Block" asp-action="UpdateBlock" asp-route-id="@item.Id" class="btn btn-warning ml-1">Edit</a>
                    <form asp-controller="Block" asp-action="DeleteBlock" method="post" style="display: inline;">
                        <input name="id" type="hidden" value="@item.Id" />
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        }
    }
    else
    {
        <h3>Nothing found!</h3>
    }
}